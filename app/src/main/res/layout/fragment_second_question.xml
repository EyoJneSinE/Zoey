<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.secondquestionfragment.SecondQuestionFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#8F000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/questionTwoText"
        android:layout_width="288dp"
        android:layout_height="81dp"
        android:layout_marginTop="30dp"
        android:text="Which traits do you want to improve?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="293dp"
        android:layout_height="24dp"
        android:text="you can select multiple options from the list"
        android:textAlignment="center"
        android:textColor="#273BAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTwoText" />

    <TextView
        android:id="@+id/respectText"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginTop="80dp"
        android:text="Respect"
        android:textAlignment="center"
        android:textColor="#37107E"
        android:textSize="30sp"
        android:onClick="respect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoText" />

    <TextView
        android:id="@+id/patienceText"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="Patience"
        android:onClick="patience"
        android:textAlignment="center"
        android:textColor="#37107E"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respectText" />

    <TextView
        android:id="@+id/sharingText"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="Sharing"
        android:onClick="sharing"
        android:textAlignment="center"
        android:textColor="#37107E"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patienceText" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:background="@color/green"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sharingText" />
</androidx.constraintlayout.widget.ConstraintLayout>